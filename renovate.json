{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "gitIgnoredAuthors": [
    "githubaction@githubaction.com"
  ],
  "rebaseWhen": "never",
  "packageRules": [
    {
      "matchFileNames": ["apps/napcat/**/*.yml"],
      "automerge": true
    },
    {
      "matchFileNames": ["apps/oi-bot/**/*.yml"],
      "automerge": true
    }
  ],
  "prCreation": "immediate"
}
